{%- render 'page-heading', title: 'general.404.title', title_is_translation: true -%}

<div class="gutter-horiz--regular gutter-top--regular gutter-bottom--regular">
  <div class="rte">
    <p>{{ 'general.404.subtitle' | t }}</p>
  </div>
  <a style="margin-top:1em" href="{{ routes.all_products_collection_url }}" class="button button--solid--hover-accent"><span class="button__text">{{ 'general.404.continue_browsing' | t }}</span></a>
</div>

{%- render 'color-scheme', color_scheme: blank, hide_section_bottom_border: false -%}

{% schema %}
  {
    "name": "t:sections.main-404.name",
    "class": "element--has-section-borders"
  }
{% endschema %}
